{
  "name": "ultra-card",
  "version": "1.1.0-beta2",
  "description": "Ultra Card - A modular card builder for Home Assistant",
  "main": "dist/ultra-card.js",
  "scripts": {
    "prebuild": "node prepare-build.js",
    "build": "webpack --mode production",
    "postbuild": "cp dist/ultra-card.js . && cp dist/ultra-card.js.LICENSE.txt .",
    "build:deploy": "node deploy.js",
    "build:deploy:local": "npm run prebuild && webpack --mode production && mkdir -p /Volumes/config/www/community/Ultra-Card/ && cp -R dist/* /Volumes/config/www/community/Ultra-Card/",
    "restart:ha": "./deploy-with-restart.sh",
    "watch": "webpack --watch --mode development",
    "start": "webpack serve --mode development --open",
    "dev": "webpack serve --mode development --open",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "validate:translations": "node scripts/validate-translations.js",
    "translations:stats": "node scripts/translation-stats.js",
    "version:update": "node prepare-build.js --set-version",
    "version:bump": "npm version patch",
    "release": "node create-release.js"
  },
  "keywords": [
    "home-assistant",
    "lovelace",
    "card",
    "modular",
    "layout",
    "builder"
  ],
  "author": "WJD Designs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WJDDesigns/Ultra-Card"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "custom-card-helpers": "^1.9.0",
    "home-assistant-js-websocket": "^8.0.1",
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^10.1.1",
    "file-loader": "^6.2.0",
    "prettier": "^3.5.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.3.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.15.1"
  }
}
